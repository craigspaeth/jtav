// 
// Home page
// 

@import 'base'

#main-slideshow
  height 365px
  position relative
  p
    padding 30px 600px 0 0
    font-size 26px
    font-smoothing antialiased
  a.read-more
    color black
  li
    opacity 0
    position absolute
    top 0
    width 100%
    transition opacity 0.7s ease-in-out
    &.active
      opacity 1
  li, li .container
    height 100%
  li.main
    background-color #222
    p
      color white
    .container
      background url('/images/home/home-banner.jpg') no-repeat right center
  li.led-treatment
    background-color white
    border-bottom 1px solid #ccc
    .container
      background url('/images/home/led-treatment.jpg') no-repeat right bottom
  li.ultherapy
    background url('/images/home/ultherapy.jpg') center bottom
    background-size 100% auto
    min-width 1000px
    p
      padding 30px 0 0 600px
      color white
      text-align right
      a
        color white
  
#main-slideshow-dots
  text-align center
  padding 10px 0
  ul
    display inline-block
  li
    width 11px
    height @width
    opacity 0.3
    float left
    margin-right 7px
    cursor pointer
    &:hover
      opacity 0.6
    &.active
      opacity 1
      
.home-about
  clearfix()
  img
    float left
    margin-right 20px
    
ul.featured-procedures
  li
    clearfix()
    margin-bottom 40px
  p
    float right
    width 360px
  .name
    float left
    width 150px
    text-align left
    font-size 20px
    color #777
    padding-top 3px
    
#home-gmaps
  width 252px
  height 200px
  display block
  float left
  margin-right 20px