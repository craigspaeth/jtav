// 
// Procedures styles
// 

@import 'base'

.left-procedures-container
  width 720px
  padding-right 40px
  box-sizing border-box
  float left

.right-procedure-index
  float right
  padding-top 40px
  h3, .index-items
    padding-left 20px
  h3
    margin 0 0 10px 0
  .index-items
    border-left 1px solid #ccc
    font-size 14px
    color #777
  h4, h5
    cursor pointer
    &:hover
      text-decoration underline
    &.highlight
      color black

.procedures-h2
  margin-top 70px
  
ul.instructions li
  margin 1em 0
  
.procedures-slide-show-container
  background black
  text-align center
  .container
    position relative
    padding 20px 0
  ul.slide-show li
    display block
    margin-bottom 20px
    &:not(.active)
      display none
    .img-container
      display inline-block
      clearfix()
      img
        display block
        height 300px
        margin auto
        &.large
          height 400px
      .before-caption, .after-caption, .caption
        color #777
        width 50%
        float left
        text-transform uppercase
        letter-spacing 2px
        font-size 14px
      .caption
        width 100%
  ul.slide-show-dots 
    display inline-block
    clearfix()
    li
      width 16px
      height @width
      float left
      margin-right 10px
      background no-repeat center center
      opacity 0.2
      cursor pointer
      &.active
        opacity 0.8
      &:hover:not(.active)
        opacity 0.5
  .slide-show-arrow-left, .slide-show-arrow-right
    position absolute
    height 100%
    top 0
    width 100px
    background #eee
    cursor pointer
    opacity 0.2
    transition opacity 0.3s ease-in-out 
    &:hover
      opacity 0.6
  .slide-show-arrow-left
    left 0
    background no-repeat left center
  .slide-show-arrow-right
    right 0
    background no-repeat right center